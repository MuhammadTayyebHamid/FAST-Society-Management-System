@page
@model SE_Project.Pages.ApplyInterviewModel
@{
    Layout = null;
}



<span style="font-family: verdana, geneva, sans-serif;">
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <title>SMS</title>
        <link rel="stylesheet" href="/css/ApplyInterview.css" />
        <!-- Font Awesome Cdn Link -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    </head>
    <body>
        <div class="container">
            <nav>
                <div class="navbar">
                    <div class="logo">
                        <img src="/images/logo.jpg" alt="">
                        <h1>SMS</h1>
                    </div>
                    <ul>
                        <li>
                            <a href="/Student?studentname=@Model.Student_name">
                                <span class="nav-item">Home</span>
                            </a>
                        </li>
                        <li>
                            <a href="/ApplyInterview?studentname=@Model.Student_name">
                                <span class="nav-item">Apply for Interview</span>
                            </a>
                        </li>
                        <li>
                            <a href="/RegisterEvent?studentname=@Model.Student_name">
                                <span class="nav-item">Register for Event</span>
                            </a>
                        </li>

                        <li>
                            <a href="#" class="logout">
                                <i class="fas fa-sign-out-alt"></i>
                                <span class="nav-item">Logout</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <section class="main">
                <div class="main-top">
                    <a class="navbar-brand" asp-area="" asp-page="/Index">Society Management System</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                </div>
                <div class="main-body">
                    <div class="applyInterview-box">
                        <h1>Apply for Interview</h1>
                        <form method="post">
                            <label>Name</label>
                            <input type="text" id="name" name="interview.Name" asp-for="interview.Name" placeholder="Enter Name" />
                            <label>Society</label>
                            <input type="text" id="name" name="interview.SocietyName" asp-for="interview.SocietyName" placeholder="Enter Society" />
                            <label>Email</label>
                            <input type="email" id="email" name="interview.Email" asp-for="interview.Email" placeholder="Enter Email" />
                            <label>Roll No</label>
                            <input type="text" id="rollNo" name="interview.RollNo" asp-for="interview.RollNo" placeholder="Enter Roll No i.e. 24I-0823" />
                            <input id="sub-button" type="submit" value="Submit" />
                        </form>
                    </div>



                </div>

            </section>
        </div>

    </body>
</html>
</span>

