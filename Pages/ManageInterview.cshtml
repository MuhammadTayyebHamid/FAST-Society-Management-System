@page
@model SE_Project.Pages.ManageInterviewModel
@{
    Layout = null;
}




<span style="font-family: verdana, geneva, sans-serif;">
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <title>SMS</title>
        <link rel="stylesheet" href="/css/ManageInterview.css" />
        <!-- Font Awesome Cdn Link -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    </head>
    <body>
        <div class="container">
            <nav>
                <div class="navbar">
                    <div class="logo">
                        <img src="/images/logo.jpg" alt="">
                        <h1>SMS</h1>
                    </div>
                    <ul>
                        <li>
                            <a href="/SocietyHead?societyName=@Model.SocietyName">
                                <span class="nav-item">Home</span>
                            </a>
                        </li>


                        <li>
                            <a href="/ManageMember?societyName=@Model.SocietyName">
                                <span class="nav-item">Manage Member</span>
                            </a>
                        </li>
                        <li>
                            <a href="ManageEvent?societyName=@Model.SocietyName">
                                <span class="nav-item">Manage Event</span>
                            </a>
                        </li>
                        <li>
                            <a href="/TaskCoordination?societyName=@Model.SocietyName">
                                <span class="nav-item">Task Coordination</span>
                            </a>
                        </li>
                        <li>
                            <a href="/CreateMeeting?societyName=@Model.SocietyName">
                                <span class="nav-item">Create Meeting</span>
                            </a>
                        </li>
                        <li>
                            <a href="/ManageInterview?societyName=@Model.SocietyName">
                                <span class="nav-item">Manage Interview</span>
                            </a>
                        </li>
                        <li>
                            <a href="#" class="logout">
                                <i class="fas fa-sign-out-alt"></i>
                                <span class="nav-item">Logout</span>
                            </a>
                        </li>
                    </ul>
                </div>

                </nav>

            <section class="main">
                <div class="main-top">
                    <a class="navbar-brand" asp-area="" asp-page="/Index">Society Management System</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                </div>
                <div class="main-body">
                    <h1>Manage Interview</h1>
                    @if (Model.Interviews != null && Model.Interviews.Any())
                    {
                        <h2>Interviews</h2>
                        <br />
                        <table class="announcementTable">

                            <tbody>

                                <tr>
                                    <td>
                                        <center> Name </center>
                                    </td>
                                    <td>
                                        <center> Email </center>
                                    </td>
                                    <td>
                                        <center> roll number </center>
                                    </td>
                                </tr>

                                @foreach (var interview in Model.Interviews)
                                {
                                    <tr>
                                        <td>
                                            <center> @interview.Name </center>
                                        </td>
                                        <td>
                                            <center> @interview.Email </center>
                                        </td>
                                        <td>
                                            <center> @interview.RollNo </center>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    }



                </div>

            </section>
        </div>

    </body>
</html>
</span>


<script>
    function handleResponseChange(selectElement) {
        var parentTd = selectElement.parentNode;
        var dateLabel = parentTd.querySelector('#dateLabel');
        var dateInput = parentTd.querySelector('#dateInput');
        var timeLabel = parentTd.querySelector('#timeLabel');
        var timeInput = parentTd.querySelector('#timeInput');
        var doneButton = parentTd.querySelector('#doneButton');

        if (selectElement.value === 'Accept') {
            dateLabel.style.display = 'block';
            dateInput.style.display = 'block';
            timeLabel.style.display = 'block';
            timeInput.style.display = 'block';
            doneButton.style.display = 'block';
        } else {
            dateLabel.style.display = 'none';
            dateInput.style.display = 'none';
            timeLabel.style.display = 'none';
            timeInput.style.display = 'none';
            doneButton.style.display = 'none';
        }
    }

</script>

