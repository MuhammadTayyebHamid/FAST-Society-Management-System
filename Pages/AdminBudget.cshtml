@page
@model SE_Project.Pages.AdminBudgetModel
@{
    Layout = null;
}




<span style="font-family: verdana, geneva, sans-serif;">
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <title>SMS</title>
        <link rel="stylesheet" href="/css/AdminBudget.css" />
        <!-- Font Awesome Cdn Link -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    </head>
    <body>
        <div class="container">
            <nav>
                <div class="navbar">
                    <div class="logo">
                        <img src="/images/logo.jpg" alt="">
                        <h1>SMS</h1>
                    </div>
                    <ul>
                        <li>
                            <a href="/Admin">
                                <span class="nav-item">Home</span>
                            </a>
                        </li>

                        <li>
                            <a href="/AddSociety">
                                <span class="nav-item">Add Society</span>
                            </a>
                        </li>

                        <li>
                            <a href="/DeleteSociety">
                                <span class="nav-item">Delete Society</span>
                            </a>
                        </li>

                        <li>
                            <a href="/AdminBudget">
                                <span class="nav-item">Assign Budget</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <section class="main">
                <div class="main-top">
                    <a class="navbar-brand" asp-area="" asp-page="/Index">Society Management System</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                </div>

                <div class="main-body">

                    <div>
                        <h1>Budget</h1>
                        <table class="budgetTable">

                            <tr>
                                <td id="TotalBudgetColumn">
                                    <p>Total Budget</p>
                                </td>
                                <td>
                                    <p>50,000</p>
                                </td>

                                <td id="TotalBudgetColumn">
                                    <p>Remanining Budget</p>
                                </td>
                                <td>
                                    <p>40,000</p>
                                </td>

                                <td id="TotalBudgetColumn">
                                    <p>Used Budget</p>
                                </td>
                                <td>
                                    <p>10,000</p>
                                </td>

                            </tr>

                        </table>


                    </div>

                    <div class="Budget form">
                        <header>Assign Budget</header>
                        <form method="post">
                            <label>Society Name</label>
                            <input type="text" id="SocietyName" name="budget.SocietyName" asp-for="budget.SocietyName" placeholder="Enter Society Name" />
                            <label>Society Budget</label>
                            <input type="number" id="TotalBudget" name="budget.TotalBudget" asp-for="budget.TotalBudget" placeholder="Enter Amount">
                            <input id="sub-button" type="submit" value="Submit" />
                        </form>
                    </div>



                </div>

            </section>
        </div>

    </body>
</html>
</span>
