@page
@model SE_Project.Pages.ManageEventModel
@{
    Layout = null;
}



<span style="font-family: verdana, geneva, sans-serif;">
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <title>SMS</title>
        <link rel="stylesheet" href="/css/ManageEvent.css" />
        <!-- Font Awesome Cdn Link -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    </head>
    <body>
        <div class="container">
            <nav>
                <div class="navbar">
                    <div class="logo">
                        <img src="/images/logo.jpg" alt="">
                        <h1>SMS</h1>
                    </div>
                    <ul>
                        <li>
                            <a href="/SocietyHead">
                                <span class="nav-item">Home</span>
                            </a>
                        </li>

                        <li>
                            <a href="/ManageMember">
                                <span class="nav-item">Manage Member</span>
                            </a>
                        </li>
                        <li>
                            <a href="ManageEvent">
                                <span class="nav-item">Manage Event</span>
                            </a>
                        </li>
                        <li>
                            <a href="/TaskCoordination">
                                <span class="nav-item">Task Coordination</span>
                            </a>
                        </li>
                        <li>
                            <a href="/ManageInterview">
                                <span class="nav-item">Manage Interview</span>
                            </a>
                        </li>
                        <li>
                            <a href="#" class="logout">
                                <i class="fas fa-sign-out-alt"></i>
                                <span class="nav-item">Logout</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <section class="main">
                <div class="main-top">
                    <a class="navbar-brand" asp-area="" asp-page="/Index">Society Management System</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                </div>

                <div class="main-body">
                    <div class="addEvent-box">
                        <h1>Add Event</h1>
                        <form method="post">
                            <label>Name</label>
                            <input type="text" id="EventName" name="Event.Name" asp-for="Event.Name" placeholder="Enter Event Name" />
                            <label>Location</label>
                            <input type="text" id="EventLocation" name="Event.Location" asp-for="Event.Location" placeholder="Enter Location" />
                            <label>Date</label>
                            <input type="date" id="EventDate" name="Event.Date" asp-for="Event.Date" />
                            <label>Start Time</label>
                            <input type="time" id="EventStartTime" name="Event.StartTime" asp-for="Event.StartTime" />
                            <label>End Time</label>
                            <input type="time" id="EventEndTime" name="Event.EndTime" asp-for="Event.EndTime" />

                            <input id="sub-button" type="submit" value="Submit" />
                        </form>
                    </div>

                    <div class="RemoveEvent-box">
                        <h1>Remove Event</h1>
                        <form method="post">
                            <label>Name</label>
                            <input type="text" id="removeEventName" name="RemoveEvent" asp-for="RemoveEvent" placeholder="Enter Event Name" />
                            <textarea id="removeEventReason" name="RemoveEventReason" rows="9" cols="50" placeholder="Enter Reason ..."></textarea>
                            <input id="removeSubmitBtn" type="submit" value="Submit" asp-page-handler="Remove" />
                        </form>
                    </div>

                </div>
            </section>

        </div>

    </body>
</html>
</span>