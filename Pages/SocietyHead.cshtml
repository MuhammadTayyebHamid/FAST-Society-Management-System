@page
@model SE_Project.Pages.SocietyHead

@{
    Layout = null;
}


<span style="font-family: verdana, geneva, sans-serif;">
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <title>SMS</title>
        <link rel="stylesheet" href="/css/SocietyHead.css" />
        <!-- Font Awesome Cdn Link -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    </head>
    <body>
        <div class="container">
            <nav>
                <div class="navbar">
                    <div class="logo">
                        <img src="/images/logo.jpg" alt="">
                        <h1>SMS</h1>
                    </div>
                    <ul>
                        <li>
                            <a href="/SocietyHead">
                                <span class="nav-item">Home</span>
                            </a>
                        </li>

                        <li>
                            <a href="/ManageMember">
                                <span class="nav-item">Manage Member</span>
                            </a>
                        </li>
                        <li>
                            <a href="ManageEvent">
                                <span class="nav-item">Manage Event</span>
                            </a>
                        </li>
                        <li>
                            <a href="/TaskCoordination">
                                <span class="nav-item">Task Coordination</span>
                            </a>
                        </li>
                        <li>
                            <a href="/CreateMeeting">
                                <span class="nav-item">Create Meeting</span>
                            </a>
                        </li>
                        <li>
                            <a href="/ManageInterview">
                                <span class="nav-item">Manage Interview</span>
                            </a>
                        </li>
                        <li>
                            <a href="#" class="logout">
                                <i class="fas fa-sign-out-alt"></i>
                                <span class="nav-item">Logout</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <section class="main">
                <div class="main-top">
                    <a class="navbar-brand" asp-area="" asp-page="/Index">Society Management System</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                </div>
                <div class="main-body">



                    <h1>Announce Something</h1>

                    <form method="post">

                        <div class="announce_bar">
                            <input type="text" placeholder="Add something here..." name="announcement" asp-for="announcement">
                        </div>

                        <div class="post-bar">
                            <div class="post">
                                <span>
                                    <input id="SubmitBtn" type="submit" value="Submit" />
                                </span>

                            </div>
                        </div>

                    </form>


                    @if (Model.Announcements != null && Model.Announcements.Any())
                    {
                        <h2>Announcements</h2>
                        <br />
                        <table class="announcementTable">

                            <tbody>

                                <tr>
                                    <td>
                                        <center> Society Name </center>
                                    </td>
                                    <td>
                                        <center> Announcement </center>
                                    </td>
                                </tr>

                                @foreach (var announcement in Model.Announcements)
                                {
                                    <tr>
                                        <td>
                                            <center> @announcement.societyName </center>
                                        </td>
                                        <td>
                                            <center> @announcement.Announcement </center>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    }



                    <div>
                        <h1>Budget</h1>
                        <table class="budgetTable">

                            <tr>
                                <td id="TotalBudgetColumn">
                                    <p>Total Budget</p>
                                </td>
                                <td>
                                    <p>50,000</p>
                                </td>

                                <td id="TotalBudgetColumn">
                                    <p>Remanining Budget</p>
                                </td>
                                <td>
                                    <p>40,000</p>
                                </td>

                                <td id="TotalBudgetColumn">
                                    <p>Used Budget</p>
                                </td>
                                <td>
                                    <p>10,000</p>
                                </td>

                            </tr>

                        </table>


                    </div>




                </div>


            </section>
        </div>

    </body>
</html>
</span>