@page
@model SE_Project.Pages.AdminModel

@{
    Layout = null;
}
<span style="font-family: verdana, geneva, sans-serif;">
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <title>SMS</title>
        <link rel="stylesheet" href="/css/Admin.css" />
        <!-- Font Awesome Cdn Link -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    </head>

    <body>

        <div class="container">
            <nav>
                <div class="navbar">
                    <div class="logo">
                        <img src="/images/logo.jpg" alt="">
                        <h1>SMS</h1>
                    </div>
                    <ul>
                        <li>
                            <a href="/Admin">
                                <span class="nav-item">Home</span>
                            </a>
                        </li>

                        <li>
                            <a href="/AddSociety">
                                <span class="nav-item">Add Society</span>
                            </a>
                        </li>
                                
                        <li>
                            <a href="/DeleteSociety">
                                <span class="nav-item">Delete Society</span>
                            </a>
                        </li>

                        <li>
                            <a href="/AdminBudget">
                                <span class="nav-item">Assign Budget</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>
                
        
            

            <section class="main">
                <div class="main-top">
                    <a class="navbar-brand" asp-area="" asp-page="/Index">Society Management System</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                </div>
                <div class="main-body">



                    <h1>Announce Something</h1>

                    <div class="announce_bar">
                        <input type="text" placeholder="Add something here...">
                    </div>

                    <div class="post-bar">
                        <div class="post">
                            <span>Post</span>
                        </div>
                    </div>

                    @if (Model.Announcements != null && Model.Announcements.Any())
                    {
                        <h2>Announcements</h2>
                        <br />
                        <table class="announcementTable">

                            <tbody>

                                <tr>
                                    <td>
                                        <center> Society Name </center>
                                    </td>
                                    <td>
                                        <center> Announcement </center>
                                    </td>
                                </tr>

                                @foreach (var announcement in Model.Announcements)
                                {
                                    <tr>
                                        <td>
                                            <center> @announcement.societyName </center>
                                        </td>
                                        <td>
                                            <center> @announcement.Announcement </center>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    }


                    @if (Model.Event != null && Model.Event.Any())
                    {
                        <h2>Events</h2>
                        <br />
                        <table class="announcementTable">

                            <tbody>

                                <tr>
                                    <td>
                                        <center> Society Name </center>
                                    </td>
                                    <td>
                                        <center> Event Name </center>
                                    </td>
                                    <td>
                                        <center> Budget </center>
                                    </td>
                                    <td>
                                        <center> Date </center>
                                    </td>
                                    <td>
                                        <center> Start date </center>
                                    </td>
                                    <td>
                                        <center> End date </center>
                                    </td>
                                    <td>
                                        <center> Ticket price </center>
                                    </td>
                                </tr>

                                @foreach (var events in Model.Event)
                                {
                                    <tr>
                                        <td>
                                            <center> @events.SocietyName </center>
                                        </td>
                                        <td>
                                            <center> @events.Name </center>
                                        </td>
                                        <td>
                                            <center> @events.Location </center>
                                        </td>
                                        <td>
                                            <center> @events.Date </center>
                                        </td>
                                        <td>
                                            <center> @events.StartTime </center>
                                        </td>
                                        <td>
                                            <center> @events.EndTime </center>
                                        </td>
                                        <td>
                                            <center> @events.ticket_price </center>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    }


                </div>
            </section>
        </div>
    </body>
    </html>
    
</span>
