@page
@model SE_Project.Pages.studentsignup
@{
}

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login & Registration Form</title>
    <link rel="stylesheet" href="css/Login.css">
</head>
<body>
    <div class="container">
        <div class="login form">
            <header>Login</header>
            <form method="post">
                <label>Name</label>
                <input type="text" id="name" name="Student.Name" asp-for="Student.Name" placeholder="Enter Name" />
                <label>Password</label>
                <input type="password" id="password" name="Student.Password" asp-for="Student.Password" placeholder="Enter Password" />
                <label>Email</label>
                <input type="email" id="email" name="Student.Email" asp-for="Student.Email" placeholder="Enter Email" />
                <label>Roll No</label>
                <input type="text" id="rollNo" name="Student.RollNo" asp-for="Student.RollNo" placeholder="Enter Roll No i.e. 24I-0823" />
                <input id="sub-button" type="submit" value="Submit" />
            </form>
        </div>
    </div>
</body>
</html>
